@* Views/Ogrenci/Duzenle.cshtml *@
@model OgrenciYonetimProjesi.Models.Ogrenci

@{
    ViewData["Title"] = "Öğrenciyi Düzenle";
}

<h1>Öğrenciyi Düzenle</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Duzenle">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            @* Güncellenecek kaydın ID'sini taşımak için gizli alan *@
            <input type="hidden" asp-for="Id" />
            
            <div class="form-group mb-3">
                <label asp-for="Ad" class="control-label"></label>
                <input asp-for="Ad" class="form-control" />
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Soyad" class="control-label"></label>
                <input asp-for="Soyad" class="form-control" />
                <span asp-validation-for="Soyad" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="OgrenciNo" class="control-label"></label>
                <input asp-for="OgrenciNo" class="form-control" />
                <span asp-validation-for="OgrenciNo" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-3">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Listeye Geri Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}